<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/act_chat_chat_bubble_padding"
    android:background="@drawable/bg_act_chat_chat_bubble" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_chat_bubble_time"
            android:textColor="@color/act_chat_chat_bubble_header_text_color"
            android:textSize="@dimen/act_chat_chat_bubble_header_text_size"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/act_chat_chat_bubble_margin" />
        <TextView
            android:id="@+id/tv_chat_bubble_sender"
            android:textColor="@color/act_chat_chat_bubble_header_text_color"
            android:textSize="@dimen/act_chat_chat_bubble_header_text_size"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/act_chat_chat_bubble_margin" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_chat_bubble_content"
        android:textColor="@color/act_chat_chat_bubble_text_color"
        android:textSize="@dimen/act_chat_chat_bubble_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/act_chat_chat_bubble_margin" />
</LinearLayout>