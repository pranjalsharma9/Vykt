<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/wrapper_chat_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_act_chat_chat_bubble" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_chat_bubble_time"
                android:textColor="@color/act_chat_chat_bubble_header_text_color"
                android:textSize="@dimen/act_chat_chat_bubble_header_text_size"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/act_chat_chat_bubble_margin" />
            <TextView
                android:id="@+id/tv_chat_bubble_sender"
                android:textColor="@color/act_chat_chat_bubble_header_text_color"
                android:textSize="@dimen/act_chat_chat_bubble_header_text_size"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/act_chat_chat_bubble_margin" />
            <TextView
                android:id="@+id/tv_chat_bubble_expression"
                android:textColor="@color/act_chat_chat_bubble_header_text_color"
                android:textSize="@dimen/act_chat_chat_bubble_header_text_size"
                android:layout_toEndOf="@id/tv_chat_bubble_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/act_chat_chat_bubble_margin" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_chat_bubble_content"
            android:textColor="@color/act_chat_chat_bubble_text_color"
            android:textSize="@dimen/act_chat_chat_bubble_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/act_chat_chat_bubble_margin" />

    </LinearLayout>

</FrameLayout>